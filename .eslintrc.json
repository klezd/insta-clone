{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1,
				"FunctionExpression": {
					"body": 1,
					"parameters": 2
				}
			}
		],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"react/react-in-jsx-scope": "off",
		"max-len": ["error", { "code": 120, "tabWidth": 4 }],
		"prettier/prettier": [
			"error",
			{
				"endOfLine": "auto"
			}
		]
	}
}
